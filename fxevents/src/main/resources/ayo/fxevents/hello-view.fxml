<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="ayo.fxevents.HelloController"
          alignment="CENTER" hgap="10" vgap="10">
  <TextField fx:id="greeting" GridPane.rowIndex="0" onKeyReleased="#handleKeyRelease" />
  <Button text="Hello!" fx:id="helloButton" onAction="#onHelloButtonClick" GridPane.rowIndex="1"/>
  <Button text="Bye!" fx:id="byeButton" onAction="#onHelloButtonClick" GridPane.rowIndex="1" GridPane.columnIndex="1" />
  <CheckBox fx:id="checkBox" onAction="#handleChange" text="Clear text after goodbye" GridPane.rowIndex="3" />
  <Label fx:id="myLabel" text="Nothing has happened" GridPane.rowIndex="4" />
</GridPane>
