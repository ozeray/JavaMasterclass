<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="mainBorderPane" xmlns:fx="http://javafx.com/fxml" fx:controller="ayo.fxtodo.MainWindowController">
    <top>
        <VBox>
            <MenuBar>
                <Menu text="File">
                    <MenuItem text="New..." onAction="#showNewDialogPane" />
                    <SeparatorMenuItem />
                    <MenuItem text="Exit" onAction="#exit"/>
                </Menu>
            </MenuBar>
            <ToolBar>
                <HBox>
                    <Button onAction="#showNewDialogPane">
                        <graphic>
                            <ImageView>
                                <Image url="@/toolbarButtonGraphics/general/New16.gif"></Image>
                            </ImageView>
                        </graphic>
                        <tooltip>
                            <Tooltip text="Add a new todo item" showDelay="50ms" />
                        </tooltip>
                    </Button>
                    <ToggleButton fx:id="filterToggleButton" onAction="#handleFilterButton">
                        <graphic>
                            <ImageView>
                                <Image url="@/toolbarButtonGraphics/general/History16.gif"></Image>
                            </ImageView>
                        </graphic>
                        <tooltip>
                            <Tooltip text="Button Down: Show today's items only. Button Up: Show all items" showDelay="50ms" />
                        </tooltip>
                    </ToggleButton>
                </HBox>
            </ToolBar>
        </VBox>
    </top>
    <left>
        <ListView fx:id="todoListView" onKeyPressed="#handleKeyPressed" />
    </left>
    <center>
        <VBox style="-fx-background-color: white;">
            <TextArea fx:id="itemDetailsTextArea" editable="false" VBox.vgrow="ALWAYS" wrapText="true" />
            <HBox>
                <Label text="Due to: " style="-fx-font-weight: bold;">
                    <font>
                        <Font name="Times New Roman" size="20"/>
                    </font>
                </Label>
                <Label fx:id="deadLineLabel" style="-fx-font-weight: bold;">
                    <font>
                        <Font name="Times New Roman" size="20"/>
                    </font>
                </Label>
            </HBox>
        </VBox>
    </center>
</BorderPane>
