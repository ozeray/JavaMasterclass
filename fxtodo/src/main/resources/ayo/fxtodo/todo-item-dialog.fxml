<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<DialogPane xmlns:fx="http://javafx.com/fxml" fx:controller="ayo.fxtodo.DialogController" stylesheets="@style.css">
    <content>
        <GridPane>
            <Label text="Short Description:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="shortDescriptionField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
            <Label text="Details:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextArea fx:id="detailsArea" GridPane.rowIndex="1" GridPane.columnIndex="1" wrapText="true" />
<!--            <Label fx:id="deadlineLabel" rotate="90" onMouseEntered="#mouseEntered" onMouseExited="#mouseExited" text="Deadline:" GridPane.rowIndex="2" GridPane.columnIndex="0" />-->
            <Label fx:id="deadlineLabel" onMouseEntered="#mouseEntered" onMouseExited="#mouseExited" text="Deadline:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <DatePicker fx:id="deadlinePicker" GridPane.rowIndex="2" GridPane.columnIndex="1" />
            <Hyperlink text="Go to Google" onMouseClicked="#handleGoToGoogle" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <WebView fx:id="webView" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="3" maxHeight="300" />
        </GridPane>
    </content>
</DialogPane>
